# ZPREZTORC
#
# This file configures Prezto.

# color output
zstyle ':prezto:*:*' color 'yes'
# additional prezto modules
# zstyle ':prezto:load' pmodule-dirs '/Users/bdp/code/notes/.dotfiles/zsh/autoload'
# zsh modules
zstyle ':prezto:load' zmodule 'datetime'
# zsh functions
# zstyle ':prezto:load' zfunction 'zargs' 'zmv'
# prezto modules (order matters)
zstyle ':prezto:load' pmodule \
	'environment' \
	'terminal' \
	'editor' \
	'history' \
	'directory' \
	'colors' \
	'utility' \
	'completion' \
	'prompt' \
	'git' \
	'autosuggestions' \
	'syntax-highlighting' \
	'history-substring-search'

# autosuggestions
zstyle ':prezto:module:autosuggestions:color' found 'fg=black'

# editor
zstyle ':prezto:module:editor' key-bindings 'emacs'
zstyle ':prezto:module:editor' dot-expansion 'yes'

# history substring search
zstyle ':prezto:module:history-substring-search:color' found 'fg=green'
zstyle ':prezto:module:history-substring-search:color' not-found 'fg=magenta'

# prompt
zstyle ':prezto:module:prompt' theme 'bdp'

# syntax highlighting
zstyle ':prezto:module:syntax-highlighting' highlighters 'main' 'brackets' 'pattern'
zstyle ':prezto:module:syntax-highlighting' pattern 'sudo|rm' 'fg=red,bold,underline'
zstyle ':prezto:module:syntax-highlighting' styles \
	'main' 'none' \
	'builtin' 'fg=magenta' \
	'command' 'none' \
	'unknown-token' 'none' \
	'alias' 'fg=green' \
	'function' 'fg=blue' \
	'path' 'fg=cyan,bold' \
	'path_pathseparator' 'fg=white,bold' \
	'path_prefix' 'fg=cyan,bold' \
	'path_prefix_pathseparator' 'fg=white,bold' \
	'globbing' 'fg=magenta,bold' \
	'redirection' 'fg=red,bold' \
	'bracket-error' 'fg=red,bold' \
	'bracket-level-1' 'fg=cyan,bold' \
	'bracket-level-2' 'fg=cyan,bold' \
	'cursor-matchingbracket' 'fg=green,bold'

# terminal
zstyle ':prezto:module:terminal' auto-title 'yes'

# utility
zstyle ':prezto:module:utility' safe-ops 'no'
